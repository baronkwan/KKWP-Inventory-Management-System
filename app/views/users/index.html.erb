<div class="container">
  <div class="row">
    <h3>User List</h3>
    <div class="column">
      <table class="table">
        <thead>
          <tr>
            <th>User Email</th>
            <th>User Role</th>
            <th>Change Role / Delete User</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
